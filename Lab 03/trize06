#include<iostream>
#include<vector>

#include<string.h>
using namespace std;

int main()
{
 	vector<string>palabra;
 	palabra.push_back("mierda");
 	palabra.push_back("puta");
 	palabra.push_back("carajo");
 	palabra.push_back("basura");
 	
 	string temp;
 	
 	cout<<"Ingrese texto"<<endl;
 	 while(cin>>temp)
	  {
	  	for(int i=0;i<palabra.size();i++)
		  {
		  	if(temp==palabra[i])
			  {
			  	temp="pii";
			  }
		  }
 	   cout<<temp<<" ";
	  }
	
	
}
